<h1>Paintings</h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
  </tr>

  <% @paintings.each do |painting| %>
    <tr>
      <td><%= painting.title %></td>
      <td><%= link_to 'Show', category_painting_path(@category, painting) %></td>
      <td><%= link_to 'Edit', edit_category_painting_path(@category, painting) %></td>
      <td><%= link_to 'Destroy', category_painting_path(@category, painting),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
