<div class="row justify-content-md-center py-4">
  <%= form_with model: [:admin, @exhibition], url: url, local: true, class: "form" do |form| %>
    <h3>
      <span class="py-4  badge badge-secondary badge-light">
        <%= action %> Exhibition
      </span>
    </h3>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :location %>
      <%= form.text_field :location, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :start %>
      <%= form.date_select(:start, start_year: 2000, discard_day: true) %>
    </div>

    <div class="form-group">
      <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
