<div class="p-3"></div>

<div class="col mx-auto">
  <%= link_to 'New Exhibition', new_admin_exhibition_path, class: "btn btn-primary" %>
</div>

<div class="row justify-content-md-center m-4">
  <div class="col col-md-2 border-bottom p-2">
    <span class="text-uppercase">Exhibition</span>
  </div>
  <div class="col col-md-4 border-bottom p-2">
    <span class="text-uppercase">Options</span>
  </div>
</div>

<% @exhibitions.each do |exhibition| %>
  <div class="row justify-content-md-center m-2">
    <div class="col col-lg-2">
      <span class="btn btn-light"><%= exhibition.name.titleize %></span>
    </div>
    <div class="col col-lg-2">
      <%= link_to 'Edit Exhibition', admin_exhibitions_path(exhibition), class: "btn btn-warning" %>
    </div>
  </div>
<% end %>
