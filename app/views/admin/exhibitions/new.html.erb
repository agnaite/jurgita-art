<div class="row justify-content-md-center">
  <% if @exhibition.errors.any? %>
    <div class="alert alert-light col-md-6" role="alert" id="error_explanation">
      <h6>
        <%= pluralize(@exhibition.errors.count, "error") %>
        prohibited this exhibition from being saved:
      </h6>
      <ul class="list-group">
        <% @exhibition.errors.full_messages.each do |msg| %>
          <li class="list-group-item list-group-item-danger">
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

<div class="row justify-content-md-center py-4">
  <%= form_with model: [:admin, @exhibition], url: admin_exhibitions_path, local: true, class: "form" do |form| %>
    <h3>
      <span class="py-4  badge badge-secondary badge-light">
        New exhibition
      </span>
    </h3>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :location %>
      <%= form.text_field :location, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :start %>
      <%= form.date_select(:start, start_year: 2000, discard_day: true) %>
    </div>

    <div class="form-group">
      <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
