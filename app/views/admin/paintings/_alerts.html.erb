<% if @painting.errors.any? %>
  <div class="alert alert-light col-md-6" role="alert" id="error_explanation">
    <h6>
      <%= pluralize(@painting.errors.count, "error") %>
      prohibited this painting from being saved:
    </h6>
    <ul class="list-group">
      <% @painting.errors.full_messages.each do |msg| %>
        <li class="list-group-item list-group-item-danger">
          <%= msg %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
