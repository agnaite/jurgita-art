<%= form_with model: [:category, @painting], url: admin_category_paintings_path, local: true do |form| %>

  <% if @painting.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@painting.errors.count, "error") %>
  prohibited
        this painting from being saved:
      </h2>
      <ul>
        <% @painting.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :size %><br>
    <%= form.text_field :size %>
  </p>

  <p>
    <%= form.label :medium %><br>
    <%= form.text_field :medium %>
  </p>

  <p>
    <%= form.label :price %><br>
    <%= form.text_field :price %>
  </p>

  <p>
    <%= form.label :new %><br>
    <%= form.radio_button :new, "true" %><br>
    <%= form.label :sold %><br>
    <%= form.radio_button :sold, "true" %>
  </p>

  <p>
    <%= form.label :image %><br>
    <%= form.file_field :image %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>
